body {
    font: 1em Arial, Verdana;
    color: #c8c8c8;
    font-size: 95%;
}

img {
    border: none;
}

h1 {
    color: #00E;
    margin-bottom:10px;
    font-size:130%;
}


.header h2 {
    padding: 0 0 .0em .0em;
    border:none;
    color: #37da23;
}

.contents h2 {
    border-bottom: 1px solid #B4C4C9;
    margin-top:8px;
    color: #37da23;
}

h3 {
    padding:0.5em 0;
}

h4 {
    color: #0090ff;
    text-align:right;
}

.contents h2 {
    font-size:120%;
}

h2 sub {
    margin-left: 4px;
    font-size: 50%;
    color: blue;
}

h1 a {
    text-decoration: none;
}

h4 {
    margin:0px;
    padding:0px;
}

table.data {
    margin: 8px 0px 16px 0px;
    border-collapse: collapse;
    width: 100%;
}

table th {
    text-align: left;
    padding: 10px 8px;
    margin: 0px 0px;
    border-bottom: 2px solid #343434;
}

table td {
    padding: 9px 8px;
    border-bottom: 1px solid #CCC;
}

table.stylesheets {
    margin: 8px 0px 16px 0px;
    border-collapse: collapse;
}

p {
    margin: 12px 0px 4px 0px;
}

form {
    margin-top:16px;
}

label {
    display: block;
    font-weight: bold;
}

input[type=text], input[type=password], textarea {
    padding: 0px;
    background: white url(/img/form_input_bg.gif) repeat-x;
    border-color: #7C7C7C #C3C3C3 #DDD;
    border-style: solid;
    border-width: 1px;
    padding: 2px 0px;
}

input[type=submit] {
    display: block;
    margin: 4px 1px;
}

span.brand {
    color: #f28033;
}

div.header {
    border-bottom: 1px solid #B4C4C9;
    height:60px;
    background: transparent url(../img/header-bg.gif) repeat-x bottom;
}

div.header .left {
    padding-left:0.5em;
}

div.header .right {
    height:55px;
    line-height: 55px;
}

div.header .right a.twitter {
    
}

div.box {
    clear:both;
    color: #555;
    margin: 20px auto;
    border: 1px solid #B4C4C9;
    border-left: none;
    border-right: none;
    width: 910px;
}

div.footer {
    width:910px;
    margin: 20px auto;
    clear: both;
    text-align: center;
}

div.footer img {
    margin: 0px 4px;
    vertical-align: middle;
}

div.contents {
    margin: 0.5em;
    clear:both;
}

div.right {
    float: right;
}

div.left {
    float: left;
}

div.clear {
    clear: both;
}

code {
    font-family: "Lucida Console", Monaco, monospace;
    font-size: 0.8em;
    border: 1px solid #B4C4C9;
    padding: 8px;
    background-color: #eaf0f2;
    display: block;
    margin-bottom: 1.5em;
}

div.nav {
    margin: 20px auto;
    width: 910px;
}

div.nav a:visited {
    color: #00E;
}

a:visited {
    color: #00E;
}

div.screenshots {
    margin-top:16px;
}

ul#menu { width: 100%; height: 43px; background: #FFF url("/img/menu-bg.gif") top left repeat-x; font-size: 0.8em; font-family: "Lucida Grande", Verdana, sans-serif; font-weight: bold; list-style-type: none; margin: 17px 0px 0px 0px; padding: 0; }
ul#menu li { display: block; float: left; margin: 0 0 0 5px; }
ul#menu li a { height: 43px; color: #777; text-decoration: none; display: block; float: left; line-height: 200%; padding: 8px 15px 0; }
ul#menu li a:hover { color: #333; }
ul#menu li a.current{ color: #FFF; background: #FFF url("/img/current-bg.gif") top left repeat-x; padding: 5px 15px 0; }